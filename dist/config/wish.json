{
  "description": "External wish channel configuration for non-Universe symbol requests",
  "version": "1.0.0",
  "last_updated": "2025-01-22",
  "wish_channel": {
    "type": "github_issue",
    "url_template": "https://github.com/romarin-hsieh/macrofolio-poc/issues/new?title=Symbol%20Request:%20{symbol}&body=I%20would%20like%20to%20request%20adding%20symbol%20**{symbol}**%20to%20the%20Universe.%0A%0A**Reason:**%20%0A%0A**Additional%20Information:**%20%0A%0AThis%20request%20was%20submitted%20from%20the%20Investment%20Dashboard%20POC.",
    "button_text": "Request Symbol Addition",
    "description": "Submit a request to add this symbol to the Universe"
  },
  "alternative_channels": [
    {
      "type": "google_form",
      "url_template": "https://forms.google.com/example?entry.symbol={symbol}",
      "button_text": "Submit via Form",
      "description": "Alternative form submission",
      "enabled": false
    },
    {
      "type": "email",
      "url_template": "mailto:admin@example.com?subject=Symbol%20Request:%20{symbol}&body=Please%20consider%20adding%20{symbol}%20to%20the%20Universe.",
      "button_text": "Email Request",
      "description": "Send email request",
      "enabled": false
    }
  ],
  "validation": {
    "max_symbol_length": 10,
    "allowed_chars": "[A-Z0-9.-]",
    "url_encoding": true
  },
  "ui_settings": {
    "show_alternative_channels": false,
    "confirmation_message": "Your request has been submitted. The symbol will be reviewed for inclusion in future updates.",
    "modal_title": "Symbol Not in Universe",
    "modal_description": "This symbol is not currently supported in our POC Universe of 10 stocks. You can request its addition for future consideration."
  }
}