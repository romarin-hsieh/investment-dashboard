{
  "description": "LLM prompt parameters and configuration for brief generation",
  "version": "1.0.0",
  "last_updated": "2025-01-22",
  "llm_config": {
    "provider": "openai",
    "model": "gpt-3.5-turbo",
    "max_tokens": 150,
    "temperature": 0.3,
    "timeout_seconds": 10,
    "retry_attempts": 2
  },
  "brief_generation": {
    "target_length": {
      "min_chars": 50,
      "max_chars": 100,
      "truncate_if_longer": true
    },
    "language": "zh-TW",
    "tone": "professional",
    "focus_areas": [
      "price_movement",
      "volume_analysis", 
      "news_impact",
      "technical_levels",
      "risk_factors"
    ]
  },
  "prompt_template": {
    "system_message": "你是一位專業的投資分析師。請用繁體中文為 {symbol} 生成一個 50-100 字的簡潔投資摘要。",
    "user_message": "股票代號: {symbol}\n當前價格: ${price_usd}\n價格變化: {change_percent}%\n成交量: {volume}\n相關新聞: {news_titles}\n\n請生成一個專業、客觀的投資摘要，重點關注價格走勢、成交量狀況和重要新聞影響。",
    "fallback_template": "{symbol} 股價 {price_change_text}，成交量 {volume_status}。近期關注重要技術位和基本面變化。"
  },
  "news_context": {
    "max_news_items": 3,
    "title_max_length": 100,
    "relevance_keywords": [
      "earnings",
      "revenue", 
      "guidance",
      "analyst",
      "upgrade",
      "downgrade",
      "merger",
      "acquisition",
      "partnership"
    ]
  },
  "fallback_rules": {
    "use_fallback_when": [
      "llm_timeout",
      "llm_error", 
      "invalid_response_format",
      "response_too_long",
      "response_too_short"
    ],
    "fallback_variables": {
      "price_change_text": {
        "positive": "上漲",
        "negative": "下跌", 
        "flat": "持平"
      },
      "volume_status": {
        "high": "放量",
        "normal": "正常",
        "low": "縮量"
      }
    }
  },
  "quality_control": {
    "min_chinese_chars": 30,
    "max_english_ratio": 0.1,
    "forbidden_phrases": [
      "投資建議",
      "買入",
      "賣出", 
      "推薦",
      "不構成投資建議"
    ],
    "required_elements": [
      "symbol_mention",
      "price_reference"
    ]
  }
}